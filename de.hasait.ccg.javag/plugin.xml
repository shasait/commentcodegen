<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin
   id="de.hasait.ccg.javag"
   name="JavaGenerator Plug-in"
   version="1.0.1"
   provider-name="Sebastian Hasait"
   class="de.hasait.ccg.javag.JavagPlugin">

   <runtime>
      <library name="javag.jar">
         <export name="*"/>
      </library>
   </runtime>

   <requires>
      <import plugin="org.eclipse.ui"/>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="org.eclipse.core.resources"/>
      <import plugin="de.hasait.ccg"/>
      <import plugin="org.eclipse.jdt"/>
      <import plugin="org.eclipse.jdt.core"/>
      <import plugin="org.apache.bsf"/>
      <import plugin="ognl"/>
   </requires>
   <extension
         point="de.hasait.ccg.ccgGenerators">
      <ccgGenerator class="de.hasait.ccg.javag.pattern.BsfGenerator"/>
      <ccgGenerator class="de.hasait.ccg.javag.pattern.EventSupportGenerator"/>
      <ccgGenerator class="de.hasait.ccg.javag.pattern.MemberDelegateGenerator"/>
      <ccgGenerator class="de.hasait.ccg.javag.pattern.OgnlGenerator"/>
      <ccgGenerator class="de.hasait.ccg.javag.pattern.PropertyGenerator"/>
   </extension>

</plugin>
