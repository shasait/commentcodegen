<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin
   id="de.hasait.ccg"
   name="CommentCodeGen Plug-in"
   version="1.0.1"
   provider-name="Sebastian Hasait"
   class="de.hasait.ccg.CcgPlugin">

   <runtime>
      <library name="ccg.jar">
         <export name="*"/>
      </library>
   </runtime>

   <requires>
      <import plugin="org.eclipse.ui"/>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="org.eclipse.core.resources"/>
   </requires>
   <extension-point id="ccgGenerators" name="CommentCodeGen Generators" schema="schema/ccgGenerators.exsd"/>
   <extension-point id="ccgParsers" name="CommentCodeGen Parsers" schema="schema/ccgParsers.exsd"/>

   <extension
         id="ccgBuilder"
         name="CommentCodeGen Project Builder"
         point="org.eclipse.core.resources.builders">
      <builder
            hasNature="true">
         <run
               class="de.hasait.ccg.builder.CcgBuilder">
         </run>
      </builder>
   </extension>
   <extension
         id="ccgNature"
         name="CommentCodeGen Project Nature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="de.hasait.ccg.builder.CcgNature">
         </run>
      </runtime>
      <builder
            id="de.hasait.ccg.ccgBuilder">
      </builder>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            adaptable="true"
            objectClass="org.eclipse.core.resources.IProject"
            nameFilter="*"
            id="de.hasait.ccg.objectContribution">
         <action
               label="Add/Remove CommentCodeGen Nature"
               class="de.hasait.ccg.builder.ToggleCcgNatureAction"
               menubarPath="additions"
               enablesFor="+"
               id="de.hasait.ccg.toggleCcgNatureAction">
         </action>
      </objectContribution>
   </extension>
   <extension
         id="ccgProblem"
         name="CommentCodeGen Problem"
         point="org.eclipse.core.resources.markers">
      <super
            type="org.eclipse.core.resources.problemmarker">
      </super>
      <persistent
            value="true">
      </persistent>
   </extension>
   <extension
         point="de.hasait.ccg.ccgGenerators">
      <ccgGenerator class="de.hasait.ccg.generator.generic.NopGenerator"/>
      <ccgGenerator class="de.hasait.ccg.generator.generic.IncludeFileGenerator"/>
   </extension>

</plugin>
